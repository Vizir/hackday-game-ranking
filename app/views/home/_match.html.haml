#modal-bg
  #loading{:src => "loading.gif"}
#modal
  .header
    #close X
  = form_tag(games_path, :method => 'post', :id => 'create_game') do
    = hidden_field :game, :league_id, :value => @ranking.first.league_id
    .match_data
      .home
        = text_field_tag :player1_name, "#{current_player.try(:username)}", :id => "jogador-casa", :disabled => true
        = text_field_tag :player1_team, nil, :id => "time-casa", :class => "clearable team_autocomplete"
        = hidden_field :game, :player1_team_id, :class => "clearable"
      .away
        = text_field_tag :player2_name, nil, :id => "jogador-visitante", :disabled => true
        = text_field_tag :player2_team, nil, :id => "time-visitante", :class => "clearable team_autocomplete"
        = hidden_field :game, :player2_team_id, :class => "clearable"
        = hidden_field :game, :player2_id, :id => "jogador-visitante-id", :class => "clearable"
    .match_score
      .home
        %img{:id => "game_player1_team_logo", :class => "team_logo"}
        = text_field :game, :player1_score, :id => "home", :class => "clearable input-numerico score", :placeholder => 0, :pattern => '[0-9]*', :value => 0
      .away
        = text_field :game, :player2_score, :id => "away", :class => "clearable input-numerico score", :placeholder => 0, :pattern => '[0-9]*', :value => 0
        %img{:id => "game_player2_team_logo", :class => "team_logo"}

    %input{:id => "submit-resultado", :type => "submit", :value => "Adicionar"}

